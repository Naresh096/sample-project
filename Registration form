    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
      
        String name = tfname.getText();
        String emailadress = tfemail.getText();
        String dob = tfdob.getText();
        String location = tflocation.getText();
        String adress = ta.getText();
        
         

        try {
            Class.forName("com.mysql.jdbc.Driver");
            Connection c = DriverManager.getConnection("jdbc:mysql://localhost:3306/naresh", "root", "");
            String q = "insert into registerationform(name,emailadress,dob,location,adress)values" + "(?,?,?,?,?)";
            PreparedStatement ps = c.prepareStatement(q);

            ps.setString(1, name);
            ps.setString(2, emailadress);
            ps.setString(3, dob);
            ps.setString(4, location);
            ps.setString(5, adress);
            int res = ps.executeUpdate();
          
        
            if (res >= 1) {
                JOptionPane.showMessageDialog(this, "inserted successfully");
            } else {
                JOptionPane.showMessageDialog(this, "insert failed");
tfname.setText("");
        tfemail.setText("");
        tfdob.setText("");
        tflocation.setText("");
        ta.setText("");
            }
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, e);
        }
        
        
        
        
                
    

    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try
        {
        Class.forName("com.mysql.jdbc.Driver");
            Connection c = DriverManager.getConnection("jdbc:mysql://localhost:3306/naresh", "root", "");
            String q = "update registerationform set emailadress=?,dob=?,location=?,adress=? where name=?";
            PreparedStatement ps = c.prepareStatement(q);

            ps.setString(1, tfemail.getText());
            ps.setString(2, tfdob.getText());
            ps.setString(3, tflocation.getText());
            ps.setString(4, ta.getText());
            ps.setString(5, tfname.getText());
            int res = ps.executeUpdate();
          
        
            if (res >= 1) {
                JOptionPane.showMessageDialog(this, "updated successfully");
            } else {
                JOptionPane.showMessageDialog(this, "update failed");
            }
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, e);
}
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
         try
        {
        Class.forName("com.mysql.jdbc.Driver");
            Connection c = DriverManager.getConnection("jdbc:mysql://localhost:3306/naresh", "root", "");
            String q = "delete from registerationform where name=?";
            PreparedStatement ps = c.prepareStatement(q);

           
            ps.setString(1, tfname.getText());
            int res = ps.executeUpdate();
          
        
            if (res >= 1) {
                JOptionPane.showMessageDialog(this, "deleted successfully");
            } else {
                JOptionPane.showMessageDialog(this, "delete failed");
            }
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, e);
}
    }                                        

